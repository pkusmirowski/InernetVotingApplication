@model InernetVotingApplication.Models.PasswordRecovery

@{
    ViewData["Title"] = "Odzyskanie hasła";
}

<div class="container">
    <main id="main">
        <h2 class="text-center">Odzyskanie hasła</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" asp-action="PasswordRecovery">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <fieldset>
                        <legend class="sr-only">Dane użytkownika</legend>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label" for="Email">E-mail</label>
                            <input asp-for="Email" class="form-control" id="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Pesel" class="control-label" for="Pesel">PESEL</label>
                            <input asp-for="Pesel" class="form-control" id="Pesel" />
                            <span asp-validation-for="Pesel" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Zresetuj hasło</button>
                    </div>
                </form>
                @if (ViewBag.ResetResult != null)
                {
                    <div class="alert @ViewBag.ResetResult.Class" role="alert">
                        <b>@ViewBag.ResetResult.Message</b>
                    </div>
                }
            </div>
        </div>
    </main>
</div>
