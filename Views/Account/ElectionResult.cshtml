@model InernetVotingApplication.ViewModels.GlosowanieWyborczeViewModel

@{
    ViewData["Title"] = "Wyniki wyborów";
}

<center>
    @if (@ViewBag.ID == 1)
    {
        <p><b>Wybory się nie zaczęły.</b></p>
        <p>Sprawdź datę i wróć aby oddać głos gdy się zaczną!</p>
    }
    else if (@ViewBag.ID == 2)
    {
        <p><b>Oddałeś swój głos. Jeśli zgubiłeś hash swojego głosu znajdziesz go na swojej poczcie e-mail.</b></p>
        <p><b>Wybory jeszcze trwają.</b></p>
        <p>Wróć gdy się zakończą aby poznać wyniki!</p>
    }
    else
    {
        <h2>WYNIKI WYBORÓW</h2>
        <table border="1">
            <tr>
                <th>Imię kandydata</th>
                <th>Nazwisko kandydata</th>
                <th>Opis wyborów</th>
                <th>Ilość uzyskanych głosów</th>
                <th>Procent uzyskanych głosów</th>
            </tr>

        @foreach (var result in Model.GetElectionVotes)
        {
            <tr>
                <td>@result.CandidateName</td>
                <td>@result.CandidateSurname</td>
                <td>@result.ElectionDesc</td>
                <td>@result.CountedVotes</td>
                @if (@result.CountedVotesPercentage > 50)
                {
                    <td class="bg-success text-white"><b>@result.CountedVotesPercentage</b></td>
                }
                else
                {
                    <td>@result.CountedVotesPercentage</td>
                }
            </tr>
        }
        </table>
    }
</center>