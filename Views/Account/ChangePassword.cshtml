@model InernetVotingApplication.Models.ChangePassword

@{
    ViewData["Title"] = "Zmiana hasła";
}

<div class="container">
    <main id="main">
        <h2 class="text-center">Zmiana hasła</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="ChangePassword">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Aktualne hasło</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label">Nowe hasło</label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmNewPassword" class="control-label">Potwierdź nowe hasło</label>
                        <input asp-for="ConfirmNewPassword" class="form-control" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Zmień hasło" class="btn btn-primary" />
                    </div>
                </form>
                @if (ViewBag.Error == false)
                {
                    <div class="alert alert-danger" role="alert">
                        <b>Wprowadzono niepoprawne dane!</b>
                    </div>
                }
                @if (ViewBag.changePasswordSuccessful != null)
                {
                    <p class="text-success"><b>@ViewBag.changePasswordSuccessful</b></p>
                }
            </div>
        </div>
    </main>
</div>
