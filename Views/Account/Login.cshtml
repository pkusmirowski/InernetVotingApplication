@model InernetVotingApplication.Models.Logowanie

@{
    ViewData["Title"] = "Logowanie";
}

<div class="container">
    <main id="main">
        <h2 class="text-center">Logowanie użytkownika</h2>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="Logowanie">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">E-mail</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Haslo" class="control-label">Hasło</label>
                        <input asp-for="Haslo" class="form-control" />
                        <span asp-validation-for="Haslo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Zaloguj się</button>
                    </div>
                </form>
            </div>
        </div>

        @if (ViewBag.Error == false)
        {
            <br />
            <div class="alert alert-danger" role="alert">
                <b>Wprowadzono nieprawidłowe dane lub konto nie jest aktywne!</b>
            </div>
        }
    </main>
</div>
