@model InernetVotingApplication.Models.DataWyborow

@{
    ViewData["Title"] = "Stwórz wybory";
}

<div class="container">
    <main id="main">
        <h2>Stwórz wybory</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CreateElection">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DataRozpoczecia" class="control-label">Data rozpoczęcia</label>
                        <input asp-for="DataRozpoczecia" class="form-control" />
                        <span asp-validation-for="DataRozpoczecia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataZakonczenia" class="control-label">Data zakończenia</label>
                        <input asp-for="DataZakonczenia" class="form-control" />
                        <span asp-validation-for="DataZakonczenia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Opis" class="control-label">Opis</label>
                        <input asp-for="Opis" class="form-control" />
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Stwórz</button>
                    </div>
                </form>
            </div>
        </div>
        @if (ViewBag.Error == false)
        {
            <br />
            <div class="alert alert-danger" role="alert">
                <b>Błąd. Wybory nie zostały dodane! Możliwe, że te wybory już istnieją.</b>
            </div>
        }
        <br />
        <p class="text-success"><b>@ViewBag.addElectionSuccessful</b></p>
        @await Html.PartialAsync("_ValidationScriptsPartial")
    </main>
</div>
