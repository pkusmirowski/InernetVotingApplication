<body>
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">
            <div class="logo">
                <h1 class="text-light"><span><a class="nav-link text-dark" asp-controller="Home"
                            asp-action="Index">Wybory Prezydenckie</a></span></h1>
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a> -->
            </div>
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Strona główna</a></li>
                    @if (Context.Session.GetString("email") == null)
                    {
                        <li>
                            <a class="nav-link scrollto" asp-controller="Account" asp-action="Register">Rejestracja</a>
                        </li>
                        <li>
                            <a class="nav-link scrollto" asp-controller="Account" asp-action="Login">Zaloguj się</a>
                        </li>
                        <li>
                            <a class="nav-link scrollto" asp-controller="Account" asp-action="PasswordRecovery">Przypomnij
                                hasło</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link scrollto" asp-controller="Account" asp-action="Search">Sprawdź głos</a>
                        </li>
                    }
                    else if (!(Context.Session.GetString("Admin") == null))
                    {

                        <li>
                            <a class="nav-link scrollto" asp-controller="Admin" asp-action="AddCandidate">Dodaj
                                kandydata</a>
                        </li>
                        <li>
                            <a class="nav-link scrollto" asp-controller="Admin" asp-action="CreateElection">Stwórz
                                wybory</a>
                        </li>
                        <li>
                            <a class="nav-link scrollto" asp-controller="Account" asp-action="Logout">Wyloguj się</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="nav-link scrollto" asp-controller="Election" asp-action="Dashboard">Panel
                                głosowania</a>
                        </li>
                        <li>
                            <a class="nav-link scrollto" asp-controller="Account" asp-action="ChangePassword">Zmiana
                                hasła</a>
                        </li>
                        <li>
                            <a class="nav-link scrollto" asp-controller="Account" asp-action="Search">Sprawdź głos</a>
                        </li>
                        <li>
                            <a class="nav-link scrollto" asp-controller="Account" asp-action="Logout">Wyloguj się</a>
                        </li>

                    }
                    <li><a class="nav-link scrollto" asp-controller="Home" asp-action="Privacy">Prywatność</a></li>
                    <li><a class="nav-link scrollto" asp-controller="Home" asp-action="Contact">Kontakt</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header>
    @RenderBody()
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>Kontakt</h3>
                        <p>
                            Lorem ipsum 40/50 <br>
                            Warszawa, 55-555<br>
                            Polska <br><br>
                            <strong>Numer telefonu:</strong> +48 000000000<br>
                            <strong>Adres E-mail:</strong> info@example.com<br>
                        </p>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>Przydatne linki</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a asp-controller="Home" asp-action="Index">Strona
                                    główna</a>
                            <li><i class="bx bx-chevron-right"></i> <a asp-controller="Account"
                                    asp-action="Register">Rejestracja</a>
                            <li><i class="bx bx-chevron-right"></i> <a asp-controller="Account"
                                    asp-action="Login">Zaloguj się</a>
                            <li><i class="bx bx-chevron-right"></i> <a asp-controller="Account"
                                    asp-action="PasswordRecovery">Przypomnij hasło</a>
                            <li><i class="bx bx-chevron-right"></i> <a asp-area="" asp-controller="Home"
                                    asp-action="Privacy">Prywatność</a>
